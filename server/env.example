# Copy this file to .env and fill in your actual API keys
# Never commit .env to git!

# OpenAI API Key (used for both chat and TTS)
OPENAI_API_KEY=sk-your-openai-key-here

# Mapbox API Token (for city/location search)
MAPBOX_TOKEN=pk.your-mapbox-token-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Server Port
PORT=3001

# JWT Secret (for authentication - use a strong random string in production)
JWT_SECRET=your-secret-key-change-in-production-use-strong-random-string

# Stripe Secret Key (for credit purchases)
STRIPE_SECRET_KEY=sk_test_your-stripe-key-here

# Stripe Webhook Secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Node Environment
NODE_ENV=development
